print("Thank you for choosing Python Pizza Deliveries!")
size = input() 
add_pepperoni = input() 
extra_cheese = input() 
bill = 0
if size=="S":
  if add_pepperoni=="Y":
    bill+=2
  else:
    bill+=15
elif size=="M":
  if add_pepperoni=="Y":
    bill+=23
  else:
    bill+=20
else:
  if add_pepperoni=="Y":
    bill+=28
  else:
    bill+=25
    
if extra_cheese=="Y":
  bill+=1
else:
  bill = bill
print(f"Your final bill is: ${bill}.")
